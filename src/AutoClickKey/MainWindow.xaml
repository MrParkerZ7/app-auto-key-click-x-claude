<Window x:Class="AutoClickKey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AutoClickKey.ViewModels"
        mc:Ignorable="d"
        Title="AutoClickKey"
        Icon="Assets/app-icon-v1.png"
        Height="850"
        Width="900"
        MinHeight="700"
        MinWidth="750"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <Style x:Key="ComboStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="MinWidth" Value="60"/>
        </Style>

        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <TextBlock Text="AutoClickKey"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Action List Panel -->
            <GroupBox Grid.Column="0" Header="Action List" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Add Action Buttons -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="+ Click" Style="{StaticResource ActionButtonStyle}"
                                Command="{Binding AddClickCommand}"/>
                        <Button Content="+ Key" Style="{StaticResource ActionButtonStyle}"
                                Command="{Binding AddKeyCommand}"/>
                        <Button Content="+ Delay" Style="{StaticResource ActionButtonStyle}"
                                Command="{Binding AddDelayCommand}"/>
                        <Separator Margin="8,0"/>
                        <Button Content="Clear All" Style="{StaticResource ActionButtonStyle}"
                                Command="{Binding ClearAllCommand}"/>
                    </StackPanel>

                    <!-- Action List -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Actions}"
                             SelectedItem="{Binding SelectedAction}"
                             HorizontalContentAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsEnabled}"
                                              VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                        <TextBlock FontSize="11" Foreground="Gray">
                                            <Run Text="Delay: "/><Run Text="{Binding DelayMs}"/><Run Text="ms"/>
                                            <Run Text=" | Repeat: "/><Run Text="{Binding RepeatCount}"/><Run Text="x"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" Text="{Binding Remark}" FontSize="11" Foreground="#666"
                                               FontStyle="Italic" TextTrimming="CharacterEllipsis" MaxWidth="100"
                                               VerticalAlignment="Center" Margin="8,0"
                                               Visibility="{Binding Remark, Converter={StaticResource StringToVisibilityConverter}}"/>
                                    <Border Grid.Column="3" Background="#E0E0E0" CornerRadius="3"
                                            Padding="6,2" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Type}" FontSize="11"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Action List Controls -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Style="{StaticResource SmallButtonStyle}" Content="â–²"
                                Command="{Binding MoveUpCommand}" ToolTip="Move Up"/>
                        <Button Style="{StaticResource SmallButtonStyle}" Content="â–¼"
                                Command="{Binding MoveDownCommand}" ToolTip="Move Down"/>
                        <Button Style="{StaticResource SmallButtonStyle}" Content="ðŸ“‹"
                                Command="{Binding DuplicateCommand}" ToolTip="Duplicate"/>
                        <Button Style="{StaticResource SmallButtonStyle}" Content="âœ•"
                                Command="{Binding RemoveActionCommand}" ToolTip="Remove"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Right Panel - Properties & Profiles -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Action Properties Panel -->
                <GroupBox Grid.Row="0" Header="Action Properties" Margin="5,0,0,5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- No Selection -->
                            <TextBlock Text="Select an action to edit its properties"
                                       Foreground="Gray" Margin="5"
                                       Visibility="{Binding HasSelectedAction, Converter={StaticResource InverseBoolToVisConverter}}"/>

                            <!-- Click Properties -->
                            <StackPanel Visibility="{Binding IsClickAction, Converter={StaticResource BoolToVis}}">
                                <GroupBox Header="Click Settings" Style="{StaticResource GroupBoxStyle}">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Button:" Style="{StaticResource LabelStyle}"/>
                                            <ComboBox Grid.Row="0" Grid.Column="1" Style="{StaticResource ComboStyle}"
                                                      SelectedIndex="{Binding SelectedAction.MouseButton}">
                                                <ComboBoxItem Content="Left"/>
                                                <ComboBoxItem Content="Right"/>
                                                <ComboBoxItem Content="Middle"/>
                                            </ComboBox>
                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" Style="{StaticResource LabelStyle}"/>
                                            <ComboBox Grid.Row="1" Grid.Column="1" Style="{StaticResource ComboStyle}"
                                                      SelectedIndex="{Binding SelectedAction.ClickType}">
                                                <ComboBoxItem Content="Single"/>
                                                <ComboBoxItem Content="Double"/>
                                            </ComboBox>
                                        </Grid>
                                        <CheckBox Content="Use current cursor position"
                                                  IsChecked="{Binding SelectedAction.UseCurrentPosition}"
                                                  Margin="0,5"/>
                                        <Grid Margin="0,5" IsEnabled="{Binding SelectedAction.UseCurrentPosition, Converter={StaticResource InverseBoolConverter}}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="X:" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1" Style="{StaticResource InputStyle}"
                                                     Text="{Binding SelectedAction.FixedX, UpdateSourceTrigger=PropertyChanged}"/>
                                            <TextBlock Grid.Column="2" Text="Y:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                                            <TextBox Grid.Column="3" Style="{StaticResource InputStyle}"
                                                     Text="{Binding SelectedAction.FixedY, UpdateSourceTrigger=PropertyChanged}"/>
                                            <Button Grid.Column="4" Content="Pick" Padding="8,3" Margin="8,0,0,0"
                                                    Command="{Binding PickPositionCommand}"/>
                                        </Grid>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>

                            <!-- Key Properties -->
                            <StackPanel Visibility="{Binding IsKeyAction, Converter={StaticResource BoolToVis}}">
                                <GroupBox Header="Key Settings" Style="{StaticResource GroupBoxStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Key:" Style="{StaticResource LabelStyle}"/>
                                        <ComboBox Style="{StaticResource ComboStyle}"
                                                  SelectedValue="{Binding SelectedAction.Key}"
                                                  SelectedValuePath="Tag">
                                            <ComboBoxItem Content="A" Tag="A"/>
                                            <ComboBoxItem Content="B" Tag="B"/>
                                            <ComboBoxItem Content="C" Tag="C"/>
                                            <ComboBoxItem Content="D" Tag="D"/>
                                            <ComboBoxItem Content="E" Tag="E"/>
                                            <ComboBoxItem Content="F" Tag="F"/>
                                            <ComboBoxItem Content="G" Tag="G"/>
                                            <ComboBoxItem Content="H" Tag="H"/>
                                            <ComboBoxItem Content="I" Tag="I"/>
                                            <ComboBoxItem Content="J" Tag="J"/>
                                            <ComboBoxItem Content="K" Tag="K"/>
                                            <ComboBoxItem Content="L" Tag="L"/>
                                            <ComboBoxItem Content="M" Tag="M"/>
                                            <ComboBoxItem Content="N" Tag="N"/>
                                            <ComboBoxItem Content="O" Tag="O"/>
                                            <ComboBoxItem Content="P" Tag="P"/>
                                            <ComboBoxItem Content="Q" Tag="Q"/>
                                            <ComboBoxItem Content="R" Tag="R"/>
                                            <ComboBoxItem Content="S" Tag="S"/>
                                            <ComboBoxItem Content="T" Tag="T"/>
                                            <ComboBoxItem Content="U" Tag="U"/>
                                            <ComboBoxItem Content="V" Tag="V"/>
                                            <ComboBoxItem Content="W" Tag="W"/>
                                            <ComboBoxItem Content="X" Tag="X"/>
                                            <ComboBoxItem Content="Y" Tag="Y"/>
                                            <ComboBoxItem Content="Z" Tag="Z"/>
                                            <ComboBoxItem Content="0" Tag="0"/>
                                            <ComboBoxItem Content="1" Tag="1"/>
                                            <ComboBoxItem Content="2" Tag="2"/>
                                            <ComboBoxItem Content="3" Tag="3"/>
                                            <ComboBoxItem Content="4" Tag="4"/>
                                            <ComboBoxItem Content="5" Tag="5"/>
                                            <ComboBoxItem Content="6" Tag="6"/>
                                            <ComboBoxItem Content="7" Tag="7"/>
                                            <ComboBoxItem Content="8" Tag="8"/>
                                            <ComboBoxItem Content="9" Tag="9"/>
                                            <ComboBoxItem Content="Space" Tag="SPACE"/>
                                            <ComboBoxItem Content="Enter" Tag="ENTER"/>
                                            <ComboBoxItem Content="Tab" Tag="TAB"/>
                                            <ComboBoxItem Content="Escape" Tag="ESCAPE"/>
                                            <ComboBoxItem Content="Backspace" Tag="BACKSPACE"/>
                                            <ComboBoxItem Content="Delete" Tag="DELETE"/>
                                            <ComboBoxItem Content="Up" Tag="UP"/>
                                            <ComboBoxItem Content="Down" Tag="DOWN"/>
                                            <ComboBoxItem Content="Left" Tag="LEFT"/>
                                            <ComboBoxItem Content="Right" Tag="RIGHT"/>
                                            <ComboBoxItem Content="F1" Tag="F1"/>
                                            <ComboBoxItem Content="F2" Tag="F2"/>
                                            <ComboBoxItem Content="F3" Tag="F3"/>
                                            <ComboBoxItem Content="F5" Tag="F5"/>
                                            <ComboBoxItem Content="F6" Tag="F6"/>
                                            <ComboBoxItem Content="F7" Tag="F7"/>
                                            <ComboBoxItem Content="F9" Tag="F9"/>
                                            <ComboBoxItem Content="F10" Tag="F10"/>
                                            <ComboBoxItem Content="F11" Tag="F11"/>
                                            <ComboBoxItem Content="F12" Tag="F12"/>
                                        </ComboBox>
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <CheckBox Content="Ctrl" IsChecked="{Binding SelectedAction.UseCtrl}" Margin="0,0,15,0"/>
                                            <CheckBox Content="Alt" IsChecked="{Binding SelectedAction.UseAlt}" Margin="0,0,15,0"/>
                                            <CheckBox Content="Shift" IsChecked="{Binding SelectedAction.UseShift}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>

                            <!-- Common Properties (for all action types) -->
                            <StackPanel Visibility="{Binding HasSelectedAction, Converter={StaticResource BoolToVis}}">
                                <GroupBox Header="Timing" Style="{StaticResource GroupBoxStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Delay (ms):" Style="{StaticResource LabelStyle}"/>
                                        <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource InputStyle}"
                                                 Text="{Binding SelectedAction.DelayMs, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Repeat:" Style="{StaticResource LabelStyle}"/>
                                        <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource InputStyle}"
                                                 Text="{Binding SelectedAction.RepeatCount, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>
                                </GroupBox>
                                <GroupBox Header="Remark" Style="{StaticResource GroupBoxStyle}">
                                    <TextBox Style="{StaticResource InputStyle}"
                                             Text="{Binding SelectedAction.Remark, UpdateSourceTrigger=PropertyChanged}"
                                             AcceptsReturn="False"/>
                                </GroupBox>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </GroupBox>

                <!-- Profiles Panel -->
                <GroupBox Grid.Row="1" Header="Profile" Margin="5,5,0,0">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Name:" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Style="{StaticResource InputStyle}"
                                     Text="{Binding CurrentProfileName, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                        <TextBlock Text="Auto-saves when name is set" FontSize="10" Foreground="Gray" Margin="0,0,0,8"/>
                        <ComboBox Style="{StaticResource ComboStyle}"
                                  ItemsSource="{Binding ProfileNames}"
                                  SelectedItem="{Binding SelectedProfileName}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="New" Style="{StaticResource ActionButtonStyle}"
                                    Command="{Binding NewProfileCommand}"/>
                            <Button Content="Delete" Style="{StaticResource ActionButtonStyle}"
                                    Command="{Binding DeleteProfileCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Loop Settings Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10,8">
            <StackPanel Orientation="Horizontal">
                <CheckBox Content="Loop actions" IsChecked="{Binding LoopActions}"
                          VerticalAlignment="Center" Margin="0,0,20,0"/>
                <TextBlock Text="Loop count (0=infinite):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox Width="60" Style="{StaticResource InputStyle}"
                         Text="{Binding LoopCount, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding LoopActions}"/>
                <TextBlock Text="Delay between loops (ms):" VerticalAlignment="Center" Margin="20,0,8,0"/>
                <TextBox Width="60" Style="{StaticResource InputStyle}"
                         Text="{Binding DelayBetweenLoops, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding LoopActions}"/>
            </StackPanel>
        </Border>

        <!-- Status Bar & Controls -->
        <Border Grid.Row="3" Background="#E8E8E8" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusText}"
                           VerticalAlignment="Center" FontWeight="SemiBold"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,8,0">
                    <TextBlock Text="Hotkey:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding AvailableHotkeys}"
                              SelectedItem="{Binding SelectedHotkey}"
                              Width="70" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="2"
                        Content="{Binding ToggleButtonText}"
                        Padding="20,10"
                        FontWeight="Bold" FontSize="14"
                        Command="{Binding ToggleCommand}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
